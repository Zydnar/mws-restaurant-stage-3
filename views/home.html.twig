{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    <section id="map-container">
        <div id="map" role="application"></div>
    </section>
    <section id="filter-results">
        <div class="filter-options">
            <h2>Filter Results</h2>
            <label for="neighborhoods-select">Select neighborhoods</label>
            <select id="neighborhoods-select" name="neighborhoods">
                <option value="all">All Neighborhoods</option>
            </select>
            <label for="cuisines-select">Select cuisines</label>
            <select id="cuisines-select" name="cuisines">
                <option value="all">All Cuisines</option>
            </select>
            <button id="load-restaurants">Search</button>
            <button id="toggle-map">Toggle map</button>
        </div>
        <ul id="restaurants-list" role="list"><div style="width: 100%; text-align: center; color: gray;font-size: x-large">
                Click search to start
            </div></ul>
    </section>
{% endblock %}
